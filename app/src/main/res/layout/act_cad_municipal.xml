<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/edtPesquisarM"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="@string/edtPesquisar"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lupapesq"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_weight="1"
            android:onClick="pesquisarMunicipal"/>
    </LinearLayout>



    <EditText
        android:id="@+id/edtCodigoM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edtCodigo"/>
    <EditText
        android:id="@+id/edtBairroM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edtBairro"/>
    <EditText
        android:id="@+id/edtHorÃ¡riosM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edtHoriarios"
        android:inputType="textMultiLine"
        android:lines="4"/>
    <EditText
        android:id="@+id/edtItinerarioM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edtItinerario"
        android:inputType="textMultiLine"
        android:lines="2"/>
    <EditText
        android:id="@+id/edtParadasM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edtParadas"/>
    <EditText
        android:id="@+id/edtValorPassagemM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edtValorPassagem"/>
    <EditText
        android:id="@+id/edtAcessoM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edtAcesso"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Gravar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bGravarM"
            android:layout_weight="1"
            android:onClick="salvarMunicipal"
            android:background="#36978e" />

        <Button
            android:text="Excluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bExcluirM"
            android:layout_weight="1"
            android:onClick="excluirMunicipal"
            android:background="#72b6af " />

        <Button
            android:text="Voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bVoltarM"
            android:layout_weight="1"
            android:onClick="voltarM"
            android:background="#36978e" />

    </LinearLayout>

</LinearLayout>
</ScrollView>